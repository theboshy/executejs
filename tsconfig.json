{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
