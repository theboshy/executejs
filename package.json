{
  "name": "executejs",
  "version": "1.0.0",
  "description": "Desktop application that allows you to execute and test JavaScript code interactively. It provides a user-friendly development environment for writing, experimenting, and debugging JavaScript code quickly and easily.",
  "main": "main.js",
  "scripts": {
    "clean:build": "node ./src/utils/rmdir.js dist/",
    "build:ts": "tsc",
    "build": "npm run clean:build && ng build --base-href ./",
    "build:electron": "tsc -p electronjs",
    "start:dev": "npm run build && electron-forge start",
    "start:ng:dev": "npm run build && ng serve",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theboshy/executejs.git"
  },
  "keywords": [],
  "author": "Peter Lobo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/theboshy/executejs/issues"
  },
  "homepage": "https://github.com/theboshy/executejs#readme",
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.0.1",
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "electron": "^24.3.0",
    "jest": "^29.5.0",
    "typescript": "^5.0.4",
    "fs-extra": "^11.1.1"
  },
  "dependencies": {
    "@angular/core": "^16.0.1",
    "@angular/forms": "^16.0.2",
    "@angular/platform-browser": "^16.0.1",
    "@angular/platform-browser-dynamic": "^16.0.1",
    "@angular/router": "^16.0.1",
    "@ctrl/ngx-codemirror": "^7.0.0",
    "codemirror": "^5.65.13",
    "electron-squirrel-startup": "^1.0.0",
    "ngx-codemirror": "^1.0.0",
    "sass": "^1.62.1"
  }
}
